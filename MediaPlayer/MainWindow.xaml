                <Grid DockPanel.Dock="Left" Width="480">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Background="#3b82f6" Style="{StaticResource button}" Click="AddFiles_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Margin="0,2,0,0"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="/Images/add.png" />
                                <TextBlock
                                    Margin="4,0,0,0"
                                    FontSize="16"
                                    Foreground="White"
                                    Text="Add File" />
                            </StackPanel>
                        </Button>
                        <Button Background="#3b82f6" Style="{StaticResource button}" Click="AddFolder_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Margin="0,2,0,0"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="/Images/add.png" />
                                <TextBlock
                                    Margin="4,0,0,0"
                                    FontSize="16"
                                    Foreground="White"
                                    Text="Add Folder" />
                            </StackPanel>
                        </Button>
                        <Button Background="#ef4444" Style="{StaticResource button}" Click="RemoveFiles_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Margin="0,2,0,0"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="/Images/remove.png" />
                                <TextBlock
                                    Margin="4,0,0,0"
                                    FontSize="16"
                                    Foreground="White"
                                    Text="Remove" />
                            </StackPanel>
                        </Button>

                    </StackPanel>
                    <Border Grid.Row="1" Padding="20" Background="#EFF2F7" CornerRadius="8" Grid.ColumnSpan="2">

                        <Grid Grid.Column="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="153*"/>
                                <ColumnDefinition Width="67*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.ColumnSpan="2">
                                <TextBlock Grid.Row="0" Foreground="#cfcfcf" Text="Play list" FontSize="28" FontWeight="Bold" Margin="0 0 0 16" Grid.ColumnSpan="2"/>

                            </StackPanel>

                            <DataGrid  RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" Name="playlistListView" Style="{DynamicResource DataGridStyle1}" Grid.ColumnSpan="2" Grid.Row="1" >
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Thumbnail" IsReadOnly="True" Width="*" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">

                                                    <Image
                                        Width="40"
                                        Height="40"
                                        Source="{Binding Thumbnail}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Foreground="#cfcfcf" Header="Name" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                                    <DataGridTextColumn Foreground="#cfcfcf" Header="Length" Binding="{Binding Length}" IsReadOnly="True" Width="*"/>
                                    <DataGridTextColumn Foreground="#cfcfcf" Header="Author" Binding="{Binding Author}" IsReadOnly="True" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>


                        </Grid>
                    </Border>
                </Grid>
                <StackPanel VerticalAlignment="Center">
                    <MediaElement LoadedBehavior="Pause" Source="/Images/MONO - Waiting For You (Album 22 - Track No.10).mp4" />
                </StackPanel>
            </DockPanel>
        </DockPanel>
    </Border>
