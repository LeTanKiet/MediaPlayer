        <DockPanel LastChildFill="True">
            <!--  Controls  -->
            <StackPanel
                Height="80"
                VerticalAlignment="Center"
                DockPanel.Dock="Bottom"
                Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Filename" />

                <StackPanel VerticalAlignment="Center">
                    <StackPanel
                        Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="8,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Images/previous.png" />
                        <Image
                            Width="16"
                            Height="16"
                            Margin="8,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Images/play.png" />
                        <Image
                            Width="16"
                            Height="16"
                            Margin="8,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Images/pause.png" />
                        <Image
                            Width="16"
                            Height="16"
                            Margin="8,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="/Images/next.png" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="0:10" />
                        <Slider
                            Width="200"
                            Height="18"
                            Margin="8,0"
                            Maximum="100"
                            Minimum="0"
                            Value="0" />

                        <TextBlock Text="0:10" />
                    </StackPanel>
                </StackPanel>

                <Image
                    Width="18"
                    Height="18"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Images/random.png" />
                <Image
                    Width="18"
                    Height="18"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Images/random-active.png" />

                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Width="20"
                        Height="20"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Images/volume.png" />
                    <Slider
                        Width="18"
                        Height="60"
                        Margin="8,0"
                        Maximum="100"
                        Minimum="0"
                        Orientation="Vertical"
                        Value="0" />
                </StackPanel>
            </StackPanel>

